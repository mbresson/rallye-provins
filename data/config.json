    },

    {
      "path": "/share",
      "type": "GET",
      "controller": "share"
    },

    {
      "path": "/map",
      "type": "GET",
      "controller": "map"
    },

    {
      "path": "/itineraries",
      "type": "GET",
      "controller": "itineraries"
    },

    {
      "path": "/itineraries/:itinerary",
      "type": "GET",
      "controller": "itinerarySummary"
    },

    {
