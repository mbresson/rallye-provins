{% extends 'skel/html.twig' %}

{% block section %}

<p>
  {% trans %}Rallye Provins is on Twitter and Facebook. If you like us, share the word with your friends.{% endtrans %}
</p>

{% set shareUrl = siteUrl('start') %}

{% set shareText %}
{% trans %}Are you visiting Provins? Give a try to Rallye Provins!{% endtrans %}
{% endset %}

<h3>Twitter</h3>

<p class='twitter'>
  <div class='social'>
    <a class="twitter-share-button" href="https://twitter.com/share" data-url="{{ shareUrl }}" data-via="RallyeProvins" data-hashtags="Provins,Rallye" data-size="large" data-text="{{ shareText }}" data-count="none">
      {% trans('Tweet') %}
    </a>
  </div>

  <div class='social'>
    <a class="twitter-follow-button" href="{{ GLOB.data.contact.twitter }}" data-show-count="false" data-size="large">
      {% trans('Follow @RallyeProvins') %}
    </a>
  </div>
</p>

<h3>Facebook</h3>

<div class='facebook'>
  <div id="fb-root"></div>

  <div class="fb-share-button social" data-href="{{ GLOB.data.contact.facebook }}" data-layout="button"></div>

  <div class="fb-like social" data-href="{{ GLOB.data.contact.facebook }}" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
</div><!-- .facebook -->

{% endblock section %}

